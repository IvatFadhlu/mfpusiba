    <form
      class="d-flex justify-content-center align-items-start"
      action="/caridata/mf"
      method="GET"
    >
      <div class="input-group mt-5">
        <input
          class="form-control"
          type="text"
          name="nomorjulus"
          placeholder="Cari Berdasarkan Nomor Julus Anda"
        />
